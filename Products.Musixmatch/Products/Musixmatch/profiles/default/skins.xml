<?xml version="1.0"?>

<object name="portal_skins"
        meta_type="Plone Skins Tool"
        allow_any="False"
        cookie_persistence="False"
        request_varname="plone_skin">

    <object name="musixmatch_images"
            meta_type="Filesystem Directory View"
            directory="Products/Musixmatch/skins/musixmatch_images"/>
    <object name="musixmatch_styles"
            meta_type="Filesystem Directory View"
            directory="Products/Musixmatch/skins/musixmatch_styles"/>
    <object name="musixmatch_templates"
            meta_type="Filesystem Directory View"
            directory="Products/Musixmatch/skins/musixmatch_templates"/>
 
    <skin-path name="*">
        <layer insert-after="custom" name="musixmatch_images"/>
        <layer insert-after="custom" name="musixmatch_styles"/>
        <layer insert-after="custom" name="musixmatch_templates"/>
    </skin-path>

</object>

